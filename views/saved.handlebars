  <div class="container" id="wrapper">      
    <div class="row">
      <div class="col-md-9">
        <br>
        <br>
        <br>
        <h1>New York Times Articles Saved</h1>
        <h2></h2>
        {{#each article}}
          <div class="row">
            <div class="col-md-12">
              <div class="panel panel-success">
                <div class="panel-heading">
                  <div class="row">
                    <div class="col-md-10">
                      <h3 class="article-title panel-title" data-id="{{this.id}}">
                       {{this.title}}
                      </h3>
                    </div>
 
 
                     <div class="col-md-2">
                      <form action="/saved/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="delete-btn" value="{{this.id}}">
                    
                        <button type="button" class="add-note-btn btn btn-primary" data-toggle="modal" data-target="#myModal" id="comment-btn">
                    
                          Add Comments
                        </button>
                      </form>
                    </div>
    
                      <div class="col-md-2">
                        <form action="/delete/{{this.id}}?_method=PUT" method="POST">
                          <input type="hidden" name="delete-btn" value="false">
                          <button type="submit" class="delete-btn btn btn-danger">Delete</button>
                        </form>
                      </div>
                    </div>
                </div>

                <div class="article-link panel-body">
                  Link: {{this.link}}
                </div>
              </div>
            </div>
          </div>

        {{/each}}

        </div>
      
      <div class="col-md-3" id="notes">
      </div>
    </div>

    

